datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
  
  @@map("User")  // Explicitly set table name
}

model Customer {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  image_url String
  invoices  Invoice[]
  
  @@map("Customer")  // Explicitly set table name
}

model Invoice {
  id          String   @id @default(uuid())
  customer_id String
  amount      Int
  status      String   // "pending" or "paid"
  date        DateTime
  customer    Customer @relation(fields: [customer_id], references: [id])
  
  @@map("Invoice")  // Explicitly set table name
}

model Revenue {
  month   String @id
  revenue Int
  
  @@map("Revenue")  // Explicitly set table name
}