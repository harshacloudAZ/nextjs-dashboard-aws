generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String

  @@map("users")   // <â€” map model User to table `users`
}

model Customer {
  id        String    @id @default(uuid())
  name      String
  email     String
  image_url String
  invoices  Invoice[]
}

model Invoice {
  id          String   @id @default(uuid())
  customer_id String
  amount      Int
  status      String
  date        DateTime
  customer    Customer @relation(fields: [customer_id], references: [id])
}

model Revenue {
  month   String @id
  revenue Int
}